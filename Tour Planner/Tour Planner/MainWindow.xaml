<Window x:Class="Tour_Planner.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:xctk="http://schemas.xceed.com/wpf/xaml/toolkit"
        xmlns:app="clr-namespace:Tour_Planner"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid>
        <TabControl Grid.ColumnSpan="2">
            <TabItem Header="Home">
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="1*"/>
                        <RowDefinition Height="0.6*"/>
                        <RowDefinition Height="4*"/>
                        <RowDefinition Height="4*"/>
                    </Grid.RowDefinitions>

                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="0.6*"/>
                        <ColumnDefinition Width="4*"/>
                        <ColumnDefinition Width="4*"/>
                    </Grid.ColumnDefinitions>

                    <!-- Navigation bar -->
                    <StackPanel Background="#333333" Grid.Column="0" Grid.Row="0" Grid.RowSpan="1" Grid.ColumnSpan="3" Orientation="Horizontal" HorizontalAlignment="Stretch">
                        <TextBlock Foreground="White" VerticalAlignment="Center" HorizontalAlignment="Left" Margin="10 0 190 0">Menu</TextBlock>
                        <TextBlock Foreground="White" VerticalAlignment="Center" HorizontalAlignment="Center">Tours</TextBlock>
                        <TextBlock Foreground="White" VerticalAlignment="Center" HorizontalAlignment="Right" Margin="310 0 0 0">Tour Details</TextBlock>
                    </StackPanel>



                    <!-- Hamburger Menu -->
                    <StackPanel x:Name="hamburgerMenu" Background="#333333" Grid.Column="0" Grid.Row="1" Grid.RowSpan="4" Grid.ColumnSpan="1">
                        <ToggleButton x:Name="hamburgerToggleButton" Content="☰" FontSize="18" Foreground="White" Background="#333333" BorderBrush="#333333" Checked="HamburgerMenu_Checked" Unchecked="HamburgerMenu_Unchecked"/>
                        <StackPanel x:Name="menuItemsPanel" Orientation="Vertical" Visibility="Collapsed">
                            <Button Background="#333333" Margin="5" Command="{Binding TourReportCommand}">
                                <Image Source="/Images/fileDownload.png" Width="16" Height="16"/>
                                <Button.ToolTip>
                                    <ToolTip Content="Download Tour Report" Placement="Right"/>
                                </Button.ToolTip>
                            </Button>
                            <Button Background="#333333" Margin="5" Command="{Binding SummarizedTourReportCommand}">
                                <Image Source="/Images/SummarizedFileDownLoad.png" Width="16" Height="16"/>
                                <Button.ToolTip>
                                    <ToolTip Content="Download Summarized Tour Report" Placement="Right"/>
                                </Button.ToolTip>
                            </Button>
                            <TextBlock Foreground="White" Margin="5"></TextBlock>
                            <Button Background="#333333" Margin="5" Command="{Binding ExportTourDataCommand}">
                                <Image Source="/Images/export.png" Width="16" Height="16"/>
                                <Button.ToolTip>
                                    <ToolTip Content="Export Tour Data" Placement="Right"/>
                                </Button.ToolTip>
                            </Button>
                            <Button Background="#333333" Margin="5" Click="ImportFileButton_Click">
                                <Image Source="/Images/import.png" Width="16" Height="16"/>
                                <Button.ToolTip>
                                    <ToolTip Content="Import Tour Data" Placement="Right"/>
                                </Button.ToolTip>
                            </Button>
                        </StackPanel>
                    </StackPanel>

                    <!-- Searchbar -->
                    <xctk:WatermarkTextBox Watermark="Search ..."  Grid.Column="1" Grid.Row="1" Grid.RowSpan="1" Grid.ColumnSpan="2"  Height="22" VerticalAlignment="Center"/>
                    
                    <!-- Tour List -->
                    <ListBox x:Name="tourListBox" ItemsSource="{Binding Tours}" DisplayMemberPath="Name" Grid.Column="1" Grid.Row="2" Grid.RowSpan="1" Grid.ColumnSpan="1" SelectionChanged="TourListBox_SelectionChanged" Padding="0,5,0,0"/>

                    <!-- Google Maps ding -->
                    <Image Source="/Images/test.jpg" Grid.Row="2" Grid.RowSpan="1" Grid.Column="2" Grid.ColumnSpan="1"/>

                    <!-- All Tour Logs -->
                    <DataGrid x:Name="tourLogsDataGrid" Grid.Row="3" Grid.Column="1" Grid.RowSpan="1" Grid.ColumnSpan="3" AutoGenerateColumns="False" ItemsSource="{Binding SelectedTour.TourLogs}">
                        <DataGrid.Columns>
                            <DataGridTextColumn Header="Date" Binding="{Binding DateTime}" Width="*" />
                            <DataGridTextColumn Header="Comment" Binding="{Binding Comment}" Width="*" />
                            <DataGridTextColumn Header="Difficulty" Binding="{Binding Difficulty}" Width="*" />
                            <DataGridTextColumn Header="Total Distance" Binding="{Binding TotalDistance}" Width="*" />
                            <DataGridTextColumn Header="Total Time" Binding="{Binding TotalTime}" Width="*" />
                            <DataGridTextColumn Header="Rating" Binding="{Binding Rating}" Width="*" />
                        </DataGrid.Columns>
                    </DataGrid>

                </Grid>
            </TabItem>

            <TabItem Header="Tour">
                <app:AddTours/>
            </TabItem>
            
            <TabItem Header="TourLogs">
                <app:AddTourLogs/>
            </TabItem>
        </TabControl>
    </Grid>
</Window>