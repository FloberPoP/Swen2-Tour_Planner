<Window x:Class="Tour_Planner.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Tour_Planner"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Window.DataContext>
        <local:TourPlannerVM/>
    </Window.DataContext>
    <Grid Background="#F2F2F2">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <!-- Navigation bar -->
        <StackPanel x:Name="navigationBar" Background="#333333" Orientation="Horizontal" Grid.Row="0">
            <TextBlock Foreground="White" Margin="10,10,10,10">Menu</TextBlock>
            <TextBlock Foreground="White" Margin="125,10,100,10">Tours</TextBlock>
            <TextBlock Foreground="White" Margin="250,10,10,10">Tour Details</TextBlock>
        </StackPanel>

        <!-- Content area -->
        <Grid x:Name="contentGrid" Grid.Row="1">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="50"/>
                <ColumnDefinition Width="300"/>
                <ColumnDefinition Width="450"/>
            </Grid.ColumnDefinitions>

            <!-- Hamburger Menu -->
            <StackPanel x:Name="hamburgerMenu" Background="#333333" Width="50" HorizontalAlignment="Left">
                <ToggleButton x:Name="hamburgerToggleButton" Content="☰" FontSize="18" Foreground="White" Background="#333333" BorderBrush="#333333" Checked="HamburgerMenu_Checked" Unchecked="HamburgerMenu_Unchecked"/>
                <StackPanel x:Name="menuItemsPanel" Orientation="Vertical" Visibility="Collapsed">
                    <TextBlock Foreground="White" Margin="5">ADD</TextBlock>
                    <TextBlock Foreground="White" Margin="5">DELETE</TextBlock>
                </StackPanel>
            </StackPanel>

            <!-- Search Bar -->
            <StackPanel x:Name="searchbar" Width="300" Grid.Column="1" Height="20" VerticalAlignment="Top" Margin="0,0,0,0">
                <TextBox Text="Search ..." Height="23" />
            </StackPanel>

            <!-- Tour List -->
            <ListBox x:Name="tourListBox" ItemsSource="{Binding Tours}" Width="300" DisplayMemberPath="Name" SelectionChanged="TourListBox_SelectionChanged" Padding="0,5,0,0" Grid.Column="1" Height="373" VerticalAlignment="Top" Margin="0,20,0,0" />

            <Grid x:Name="tourDetailsPanel" HorizontalAlignment="Stretch" VerticalAlignment="Stretch" Grid.Column="2">
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="*"/>
                </Grid.RowDefinitions>

                <!-- Google Maps ding -->
                <Image Source="bin/test.jpg" Margin="0,5,11,210" Grid.RowSpan="2" HorizontalAlignment="Right" Width="440"/>
                
                <!-- All Tour Logs -->
                <DataGrid x:Name="tourLogsDataGrid" SelectionChanged="TourLogsListBox_SelectionChanged" AutoGenerateColumns="False" Margin="0,193,0,0" Grid.RowSpan="2">
                    <DataGrid.Columns>
                        <DataGridTextColumn Header="Date" Binding="{Binding DateTime}" Width="150"/>
                        <DataGridTextColumn Header="Duration" Binding="{Binding Duration}" Width="150"/>
                        <DataGridTextColumn Header="Distance" Binding="{Binding Distance}" Width="150"/>
                    </DataGrid.Columns>
                </DataGrid>
            </Grid>
        </Grid>
    </Grid>
</Window>
