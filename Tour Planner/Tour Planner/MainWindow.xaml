<Window x:Class="Tour_Planner.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Tour_Planner"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Window.DataContext>
        <local:TourPlannerVM/>
    </Window.DataContext>
    <Grid>
        <TabControl>
            <TabItem Header="Home">
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="1*"/>
                        <RowDefinition Height="4*"/>
                        <RowDefinition Height="4*"/>
                    </Grid.RowDefinitions>

                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="0.6*"/>
                        <ColumnDefinition Width="4*"/>
                        <ColumnDefinition Width="4*"/>
                    </Grid.ColumnDefinitions>

                    <!-- Navigation bar -->
                    <Label Content="Menu" Foreground="White" Background="#333" Grid.Row="0" Grid.Column="0" HorizontalContentAlignment="Center" VerticalContentAlignment="Center"/>
                    <Label Content="Tours" Foreground="White" Background="#333" Grid.Row="0" Grid.Column="1" HorizontalContentAlignment="Center" VerticalContentAlignment="Center"/>
                    <Label Content="Tour Details" Foreground="White" Background="#333" Grid.Row="0" Grid.Column="2" HorizontalContentAlignment="Center" VerticalContentAlignment="Center"/>

                    <!-- Hamburger Menu -->
                    <StackPanel x:Name="hamburgerMenu" Background="#333333" Grid.Column="0" Grid.Row="1" Grid.RowSpan="3">
                        <ToggleButton x:Name="hamburgerToggleButton" Content="☰" FontSize="18" Foreground="White" Background="#333333" BorderBrush="#333333" Checked="HamburgerMenu_Checked" Unchecked="HamburgerMenu_Unchecked"/>
                        <StackPanel x:Name="menuItemsPanel" Orientation="Vertical" Visibility="Collapsed">
                            <TextBlock Foreground="White" Margin="5">Tours:</TextBlock>
                            <Button Click="AddTour_Click" Background="#333333" Margin="5">
                                <Image Source="/Images/add.png" Width="16" Height="16"/>
                            </Button>
                            <Button Click="DeleteTour_Click" Background="#333333" Margin="5">
                                <Image Source="/Images/delete.png" Width="16" Height="16"/>
                            </Button>
                            <Button Click="UpdateTour_Click" Background="#333333" Margin="5">
                                <Image Source="/Images/update.png" Width="16" Height="16"/>
                            </Button>
                            <TextBlock Foreground="White" Margin="5">Logs:</TextBlock>
                            <Button Click="AddLogsButton_Click" Background="#333333" Margin="5">
                                <Image Source="/Images/add.png" Width="16" Height="16"/>
                            </Button>
                            <Button Click="DeleteLogsButton_Click" Background="#333333" Margin="5">
                                <Image Source="/Images/delete.png" Width="16" Height="16"/>
                            </Button>
                            <Button Click="UpdateLogsButton_Click" Background="#333333" Margin="5">
                                <Image Source="/Images/update.png" Width="16" Height="16"/>
                            </Button>
                            <TextBlock Foreground="White" Margin="15"></TextBlock>
                            <Button Click="ImportButton_Click" Background="#333333" Margin="5">
                                <Image Source="/Images/import.png" Width="16" Height="16"/>
                            </Button>
                            <Button Click="ExportButton_Click" Background="#333333" Margin="5">
                                <Image Source="/Images/export.png" Width="16" Height="16"/>
                            </Button>
                        </StackPanel>
                    </StackPanel>

                    <!-- Searchbar -->
                    <TextBox Grid.Row="1" Grid.Column="1" Text="Search ..."/>

                    <!-- Tour List -->
                    <ListBox x:Name="tourListBox" ItemsSource="{Binding Tours}" DisplayMemberPath="Name" Grid.Row="1" Grid.Column="1" Grid.RowSpan="2" SelectionChanged="TourListBox_SelectionChanged" VerticalAlignment="Top" Padding="0,5,0,0" Margin="0,20,0,0"/>

                    <!-- Google Maps ding -->
                    <Image Source="/Images/test.jpg" Grid.Row="1" Grid.Column="3" />

                    <!-- All Tour Logs -->
                    <DataGrid x:Name="tourLogsDataGrid" Grid.Row="3" Grid.Column="3" SelectionChanged="TourLogsListBox_SelectionChanged" AutoGenerateColumns="False">
                        <DataGrid.Columns>
                            <DataGridTextColumn Header="Date" Binding="{Binding DateTime}" Width="150"/>
                            <DataGridTextColumn Header="Duration" Binding="{Binding Duration}" Width="150"/>
                            <DataGridTextColumn Header="Distance" Binding="{Binding Distance}" Width="150"/>
                        </DataGrid.Columns>
                    </DataGrid>
                </Grid>
            </TabItem>
            
            <TabItem Header="AddTour">
                <Grid Background="#333">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="1*"/>
                        <RowDefinition Height="6*"/>
                        <RowDefinition Height="1*"/>
                    </Grid.RowDefinitions>

                    <Label Grid.Row="0" Foreground="White" HorizontalContentAlignment="Center" VerticalContentAlignment="Center">Add New Tour</Label>

                    <Grid Grid.Row="1">
                        <Grid.RowDefinitions>
                            <RowDefinition/>
                            <RowDefinition/>
                            <RowDefinition/>
                            <RowDefinition/>
                            <RowDefinition/>
                            <RowDefinition/>
                            <RowDefinition/>
                        </Grid.RowDefinitions>

                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="1*"/>
                            <ColumnDefinition Width="4*"/>
                            <ColumnDefinition Width="2*"/>
                        </Grid.ColumnDefinitions>

                        <ListBox Grid.Row="0" Grid.Column="2" Grid.RowSpan="7" ItemsSource="{Binding Tours}" DisplayMemberPath="Name"/>

                        <Label Grid.Row="0" Grid.Column="0" Foreground="White">Name:</Label>
                        <TextBox Grid.Row="0" Grid.Column="1" Text="{Binding NewTourName}"/>

                        <Label Grid.Row="1" Grid.Column="0" Foreground="White">Description:</Label>
                        <TextBox Grid.Row="1" Grid.Column="1" Text="{Binding NewTourDescr}"/>

                        <Label Grid.Row="2" Grid.Column="0" Foreground="White">From:</Label>
                        <TextBox Grid.Row="2" Grid.Column="1" Text="{Binding NewTourFrom}"/>

                        <Label Grid.Row="3" Grid.Column="0" Foreground="White">To:</Label>
                        <TextBox Grid.Row="3" Grid.Column="1" Text="{Binding NewTourTo}"/>

                        <Label Grid.Row="4" Grid.Column="0" Foreground="White">Transport Type:</Label>
                        <TextBox Grid.Row="4" Grid.Column="1" Text="{Binding NewTourTransType}"/>

                        <Label Grid.Row="5" Grid.Column="0" Foreground="White">Distance:</Label>
                        <TextBox Grid.Row="5" Grid.Column="1" Text="{Binding NewTourDistance}"/>

                        <Label Grid.Row="6" Grid.Column="0" Foreground="White">Estimated Time:</Label>
                        <TextBox Grid.Row="6" Grid.Column="1" Text="{Binding NewTourEstTime}"/>
                    </Grid>

                    <Button Content="Add Tour" Command="{Binding AddTourCommand}" Grid.Row="2"/>
                </Grid>
            </TabItem>
        </TabControl>               
    </Grid>
</Window>
